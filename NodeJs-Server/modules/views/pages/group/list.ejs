<!-- views/pages/list.ejs -->
<% var rootPath = '../'; %>
<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../../partials/head %>
    </head>
    <body >
        <header>
            <% include ../../partials/adminHeader %>
        </header>
        <div class="container">
            <div class="col-xs-11 center_col">     
                <h1>Group List</h1>
                <hr/>
                <div class="row">
                    <% include ../../partials/formValidation %>
                </div>
                <div>
                    <%if(models){%>
                        <%models.map((model) => {%>
                        <div class="col">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-xs-8">
                                            <p><b>Name: </b><%= model.name %></p>
                                            <p><b>Foods Count: </b><%= model.foods.length %></p>
                                        </div>
                                        <div class="col-xs-4">
                                            <img class="img-rounded img-responsive group_img" src=<%=rootPath + 'uploads/images/group/'+ model.image %> height="50" />
                                        </div>
                                    </div>
                                    <hr/>
                                    <div>
                                        <a class="btn btn-primary">Edit</a> 
                                        <a href=<%="./remove/" + model.id%> class="btn btn-danger">Remove</a>
                                    </div>
                                </div>
                            </div>
                        <div>
                        <%})%>
                    <%}else{%>
                    <%}%>
                </div>
            </div>              
        </div>
        <footer>
            <% include ../../partials/footer %>
        </footer>
    </body>
</html>