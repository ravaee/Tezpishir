<!-- views/pages/index.ejs -->
<% var rootPath = '../'; %>
<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../../partials/head %>
    </head>
    <body >
        <header>
            <% include ../../partials/adminHeader %>
        </header>
        <div class="container">
            <div class="row">  
                <div class="col-xs-12 center_col">     
                    <h1>Add a Group</h1>
                    <hr/>
                    <% include ../../partials/formValidation %>
                    <div class="col-md-6">
                        <form action="/group/create" class="col" method="post" enctype="multipart/form-data">
                            <label>Enter Group Name</label>
                            <input type="text" class="form-control" placeholder="Enter Group Name" name="name" >                        
                            <br/>
                            <label>Upload Group Picture</label>
                            <input type="file" accept="image/*" name="photo" >
                            <br/>
                            <input type="submit" class="btn btn-success" value="upload">
                        </form>
                    </div>
                </div>              
            </div>
        </div>
        <footer>
            <% include ../../partials/footer %>
        </footer>
    </body>
</html>