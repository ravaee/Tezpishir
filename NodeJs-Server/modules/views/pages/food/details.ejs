<!-- views/pages/index.ejs -->
<% var rootPath = '../../'; %>
<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../../partials/head %>
    </head>
    <body >
        <header>
            <% include ../../partials/adminHeader %>
        </header>
        <div class="container">
            <div class="row">  
                <div class="col-xs-11 center_col">     
                    <h1>Food`s Details</h1>
                    <hr/>
                    <% include ../../partials/formValidation %>
                    <div class="row">
                    </div>
                    <div class="row">
                        <div class="visible-xs col-xs-12">
                            <img class="img-rounded img-responsive " src=<%=rootPath + 'uploads/images/food/'+ models.image %> height="50px" />
                        </div>
                        <div class="col-xs-6 col-sm-3">
                            <label>Name</label>
                            <p><%=models.name%></p>                        
                            <br/>
                            <label>Group</label>
                            <p><%=models.group.name%></p>                        
                        </div>
                        <div class="col-xs-6 col-sm-3">
                            <label>Owner</label>
                            <p><%=models.owner.fullName%></p>     
                            <br/>
                            <label>Preparing Time</label>
                            <p><%=models.time + " Minutes"%></p>                        
                        </div>
                        <div class="hidden-xs col-sm-6">
                            <img class="img-rounded img-responsive food_img " src=<%=rootPath + 'uploads/images/food/'+ models.image %> height="50px" />
                        </div>
                    </div>  
                    <hr>
                    <div class="row">
                        <div class="col-xs-12">
                            <label>Ingredients</label>
                            <p style="white-space: pre-line"><%=models.ingredients%></p>
                            <br/>
                            <label>Recipes</label>
                            <p style="white-space: pre-line"><%=models.recipes%></p>
                            <br/>
                        </div>
                    </div>                                                  
                </div>              
            </div>
        </div>
        <footer>
            <% include ../../partials/footer %>
        </footer>
    </body>
</html>